<!DOCTYPE html>
@using Microsoft.AspNet.Identity
@using davidsProperties.Controllers;
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>



    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("David's Spicy Properties", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })


                
            @if (Context.User.Identity.IsAuthenticated)
            {                

                @*Placeholder admin user is email: admin@admin.com | pw: Admin#1                                *@
                
                String user = User.Identity.GetUserName();
                var userController = DependencyResolver.Current.GetService<UserRolesController>();
                if (userController.IsUserAdmin(user))
                {
                        @Html.ActionLink("Add a property", "Create", "Properties", new { area = "" }, new { @class = "navbar-brand" })
                        @Html.ActionLink("Set user credentials", "Index", "UserRoles", new { area = "" }, new { @class = "navbar-brand" })
                }

            }

            

                <span id="indexLinkSpan">
                    <a href="~/Properties/Index" id="indexLink">See all properties</a>
                </span>

            </div>

            @if (ViewBag.title != "Home Page")
            {
                <form action="~/Properties/Index?=SearchString">
                    <div class="Row" id="navSearch">
                        <div class="searchColumn">
                            <input type="text" id="searchTextBox" class="search-query form-control" name="SearchString" placeholder="Enter a suburb or postcode to begin" />
                        </div>
                        <span class="input-group-btn">
                            <button class="btn btn-success" type="submit">
                                <span class=" glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                    </div>
                </form>
            }

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                <ul class="nav navbar-nav navbar-right" id="navbarRight">
                    @Html.Partial("_LoginPartial")                   
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
