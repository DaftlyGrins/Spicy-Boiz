<!DOCTYPE html>
@using Microsoft.AspNet.Identity
@using davidsProperties.Controllers;
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("David's Spicy Properties", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })



                @if (Context.User.Identity.IsAuthenticated)
                {

                    @*Placeholder admin user is email: admin@admin.com | pw: Admin#1*@

                String user = User.Identity.GetUserName();
                var userController = DependencyResolver.Current.GetService<UserRolesController>();
                if (userController.IsUserAdmin(user))
                {
                    @Html.ActionLink("Add a property", "Create", "Properties", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Set user credentials", "Index", "UserRoles", new { area = "" }, new { @class = "navbar-brand" })
                    }

                }

                <span id="indexLinkSpan">
                    <a href="~/Properties/Index" id="indexLink">See all properties</a>
                </span>



                
            </div>



            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right" id="navbarRight">
                    @if (ViewBag.title != "Home Page")
                    {
                        <form action="~/Properties/Index?=SearchString" id="navSearchForm">
                            <div class="searchRow" id="navSearch">
                                <div class="searchColumn">
                                    <input type="text" id="searchTextBox" class="search-query form-control" name="SearchString" placeholder="Search here..." />
                                </div>
                                <span class="input-group-btn">
                                    <button class="btn btn-success" type="submit">
                                        <span class=" glyphicon glyphicon-search"></span>
                                    </button>
                                </span>
                            </div>
                        </form>
                    }
                    @if (Context.User.Identity.IsAuthenticated)
                    {
                        String email = User.Identity.GetUserName();
                        var userController = DependencyResolver.Current.GetService<UserRolesController>();
                        String userType = userController.getUserRoleFromEmail(email);
                        if (userType.Equals("Admin"))
                        {
                            @Html.ActionLink("Your profile", "PropertyManager", "Profile", new { area = "" }, new { @class = "navbar-brand" })
                        }
                        else if (userType.Equals("Staff")){
                            @Html.ActionLink("Your profile", "Staff", "Profile", new { area = "" }, new { @class = "navbar-brand" })
                        }
                        else if (userType.Equals("Tenant"))
                        {
                            @Html.ActionLink("Your profile", "Tenant", "Profile", new { area = "" }, new { @class = "navbar-brand" })
                        }
                        else if (userType.Equals("Property Owner"))
                        {
                            @Html.ActionLink("Your profile", "PropertyOwner", "Profile", new { area = "" }, new { @class = "navbar-brand" })
                        }
                        else
                        {
                            @Html.ActionLink("Your profile", "ProspectiveTenant", "Profile", new { area = "" }, new { @class = "navbar-brand" })
                        }
                    }                    
                    @Html.Partial("_LoginPartial")                   
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
